@model Category
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="exampleInputEmail1">Name</label>
        <input type="input" asp-for="Name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div>
            <img src="~/client/categoryIcons/@Model.Icon" style="transform:scale(0.7)" />
        </div>
        <label for="exampleInputPassword1">File</label>
        <input type="file" asp-for="File" class="form-control" id="exampleInputPassword1" placeholder="Password">
        <span asp-validation-for="File" class="text-danger"></span>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <button type="submit" class="btn btn-warning">Update</button>
</form>